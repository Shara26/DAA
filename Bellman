
#include <iostream>
#include <limits>
using namespace std;

struct Edge {
    int u, v, w;
};

void bellmanFord(int V, int E, int src, Edge edges[])
{
    int dist[100]; 
    for (int i = 0; i < V; i++)
        dist[i] = numeric_limits<int>::max();
    dist[src] = 0;

    for (int i = 1; i <= V - 1; i++)
    {
        for (int j = 0; j < E; j++)
        {
            int u = edges[j].u;
            int v = edges[j].v;
            int w = edges[j].w;
            if (dist[u] != numeric_limits<int>::max() && dist[u] + w < dist[v])
                dist[v] = dist[u] + w;
        }
    }

    for (int j = 0; j < E; j++)
    {
        int u = edges[j].u;
        int v = edges[j].v;
        int w = edges[j].w;
        if (dist[u] != numeric_limits<int>::max() && dist[u] + w < dist[v])
        {
            cout << "Graph contains negative weight cycle!" << endl;
            return;
        }
    }

    cout << "\nVertex\tDistance from Source\n";
    for (int i = 0; i < V; i++)
    {
        if (dist[i] == numeric_limits<int>::max())
            cout << i << "\tINF\n";
        else
            cout << i << "\t" << dist[i] << "\n";
    }
}

int main()
{
    int V, E, src;
    cout << "Enter number of vertices: ";
    cin >> V;
    cout << "Enter number of edges: ";
    cin >> E;

    Edge edges[100];

    cout << "Enter edges (u v w):\n";
    for (int i = 0; i < E; i++)
        cin >> edges[i].u >> edges[i].v >> edges[i].w;

    cout << "Enter source vertex (0 to " << V - 1 << "): ";
    cin >> src;

    bellmanFord(V, E, src, edges);

    return 0;
}


