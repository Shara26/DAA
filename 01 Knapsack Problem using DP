#include <iostream>
using namespace std;

int main()
{
    int n, W;
    cout << "Enter number of items: ";
    cin >> n;
    cout << "Enter capacity of knapsack: ";
    cin >> W;

    int wt[n + 1], val[n + 1];
    cout << "Enter weights:\n";
    for (int i = 1; i <= n; i++)
        cin >> wt[i];
    cout << "Enter values:\n";
    for (int i = 1; i <= n; i++)
        cin >> val[i];

    int dp[n + 1][W + 1];

    for (int i = 0; i <= n; i++)
        for (int w = 0; w <= W; w++)
            dp[i][w] = 0;

    for (int i = 1; i <= n; i++)
    {
        for (int w = 1; w <= W; w++)
        {
            if (wt[i] <= w)
                dp[i][w] = max(val[i] + dp[i - 1][w - wt[i]], dp[i - 1][w]);
            else
                dp[i][w] = dp[i - 1][w];
        }
    }

    cout << "\nMaximum value in knapsack: " << dp[n][W] << "\n";

    cout << "\nDP Table:\n";
    for (int i = 0; i <= n; i++)
    {
        for (int w = 0; w <= W; w++)
            cout << dp[i][w] << " ";
        cout << "\n";
    }

    cout << "\nItems included:\n";
    int w = W;
    for (int i = n; i > 0 && w > 0; i--)
    {
        if (dp[i][w] != dp[i - 1][w])
        {
            cout << "Item " << i << " (Weight=" << wt[i] << ", Value=" << val[i] << ")\n";
            w -= wt[i];
        }
    }

    return 0;
}

